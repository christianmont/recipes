<%
    if(recipe) {
        var title=recipe.title
        var desc=recipe.desc
        var ingredients=recipe.ingredients
        var directions=recipe.directions
        var prep=recipe.prep;
        var cook=recipe.cook;
        var ready=recipe.ready;
        var servings=recipe.servings;
        var yield=recipe.yield;
    } else {
        var title="";
        var desc="";
        var ingredients="";
        var directions="";
        var prep="";
        var cook="";
        var ready="";
        var servings="";
        var yield="";
    }
%>
<div class="big-container">
    <div class="my-container add-recipe" id="my-container">
        <div class="card">
            <h2>Submit a Recipe</h2>
            <p class="tagline">Share your recipe with us!</p>
            <hr>
            <form action="/recipes/edit/<%=recipe._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="directions">
                    <div class="section">
                        <p class="title">Recipe Title</p>
                        <input type="text" name="title" value="<%=title%>" required="required"></input>
                    </div>
                    <div class="section">
                        <p class="title">Description</p>
                        <textarea class="small" name="desc" required="required"><%-desc%></textarea>
                    </div>
                    <div class="section">
                        <p class="title">Ingredients</p>
                        <textarea name="ingredients" placeholder="Put each ingredient on its own line." required="required"><%-ingredients%></textarea>
                    </div>
                    <div class="section">
                        <p class="title">Directions</p>
                        <textarea name="directions" placeholder="Put each step on its own line." required="required"><%-directions%></textarea>
                    </div>
                    <input type="submit" name="submit" value="Submit recipe">
                </div>
                <div class="specs">
                    <button type="button" onclick="document.getElementById('foodPicUpload').click()" class="upload-btn">
                        <img src="data:image/png;base64,">
                        <div class="break"></div>
                        <p class="main">Add photo(s)</p>
                        <div class="break"></div>
                        <p class="sub">(no smaller than 960 X 960)</p>
                    </button>
                    <div id="fileCount"></div>
                    <% if(nonImage) { %>
                        <div class="recipe-msg" id="recipe-msg">All images must end with jpeg, jpg, png or gif</div>
                    <% } else if(imgTooSmall) { %>
                        <div class="recipe-msg" id="recipe-msg">All images must be at least 960 x 960</div>
                    <% } else if(noImages) { %>
                        <div class="recipe-msg" id="recipe-msg">You must choose at least one image</div>
                    <% } %>
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>
                                <p>Prep time</p>
                                <input type="text" name="prep" value="<%=prep%>" required="required"></input>
                            </td>
                            <td>
                                <p>Cook time</p>
                                <input type="text" name="cook" value="<%=cook%>" required="required"></input>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Ready in</p><div class="optional">(Optional)</div>
                                <input type="text" name="ready" value="<%=ready%>"></input>
                            </td>
                            <td>
                                <p>Number of servings</p><br>
                                <input type="text" name="servings" value="<%=servings%>" required="required"></input>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Recipe yield</p><div class="optional">(Optional)</div>
                                <input type="text" name="yield" value="<%=yield%>"></input>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <input type="file" name="images" id="foodPicUpload" multiple style="display:none" accept="image/*" onchange="loadFiles(event)">
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    loadFiles = function(event) {
        var fileCount = document.getElementById('fileCount')
        if(event.target.files.length == 1) {
            fileCount.innerHTML = event.target.files.length + " image selected"
        } else {
            fileCount.innerHTML = event.target.files.length + " images selected"
        }
        fileCount.style.height="0";
        var msg = document.getElementById("recipe-msg")
        msg.innerHTML=""
        fileCount.onload = function() {
            fileCount.innerHTML = ""
        }
    }
</script>