<%
    if(!email) {
        var email = ""
    }
%>
<form action="/forgot-password" method="post">
    <div class="form-logo">RECIPES</div>
    <h2 class="text-center reset-heading">Reset your password</h2>
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control" name="email" placeholder="Enter your email address" value="<%=email%>" required="required">				
        </div>
    </div>
    <% if(noAccount) { %>
        <div class="form-msg">There is no account with this email</div>
    <% } %>
    <% if(emailSent) { %>
        <div class="success-msg">A confirmation link has been sent to your email.</div>
    <% } %>
    <div class="form-group">
        <button type="submit" class="btn btn-primary login-btn btn-block">Send Reset Link</button>
    </div>
    <p class="reset-message">If you registered your account using your email address, you can enter it above and we'll send you a reset link.</p>
    <div class="clearfix">
        <a href="/login" class="pull-center"><i class="fa fa-chevron-left"></i>go back to login</a>
    </div>
</form>